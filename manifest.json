{
    "manifest_version": 3,
    "name": "NetSuite Sticky Header",
    "version": "2025.12.2",
    "description": "Always see the primary record header (Customer or Order) in NetSuite. Keeps the current record's key details visible as you scroll.",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.netsuite.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}